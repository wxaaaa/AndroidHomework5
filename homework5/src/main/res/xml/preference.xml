<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="网络设置">
        <SwitchPreference
            android:icon="@drawable/wifi"
            android:key="wifi"
            android:summary="打开wifi"
            android:title="Wi-Fi">
        </SwitchPreference>
        <Preference
            android:dependency="wifi"
            android:key="wifi_setting"
            android:summary="设置和管理无线接入点"
            android:title="wifi管理">
        </Preference>
        <SwitchPreference
            android:icon="@drawable/signal4g"
            android:key="set4G"
            android:summary="启用4G网络"
            android:title="4G网络">
        </SwitchPreference>
        <SwitchPreference
            android:icon="@drawable/vpn"
            android:key="vpn"
            android:summary="使用VPN"
            android:title="VPN">

        </SwitchPreference>


        <SwitchPreference
            android:icon="@drawable/bluetooth"
            android:key="bluetooth"
            android:summary="启用蓝牙"
            android:title="蓝牙">

        </SwitchPreference>

        <Preference
            android:dependency="bluetooth"
            android:key="bluetooth_setting"
            android:summary="管理连接、设备设备名称和可检测性"
            android:title="蓝牙设置">

        </Preference>
    </PreferenceCategory>
</PreferenceScreen>